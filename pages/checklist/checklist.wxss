.ant-empty {
  height: 40px; 
  display: block;
  margin: 8px 0;
  text-align: center;
}
.ant-empty__img{
  display: inline;
}
.ant-empty__description{
  color: #00000040;
  text-align: center;
}
.check-item {
  position: relative;
  background: #fff;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  padding: 30rpx;
  overflow: hidden;
  border-radius: 20rpx;
}

.check-body{
  margin-top: 16rpx;
}
.check-button{
  position: absolute;
  top: 32rpx;
  right: 30rpx;
  margin-top: 0;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #008DF8;
  text-align: center;
  border: none;
  border-radius:0;
  background-color:transparent;
}

.btn-confirm::after {
  border: none;
}
.section-marks{
  line-height: 160rpx;
}
.shenhe-modal .modal-input{
  background:none;
  border:none;
}
.shenhe-modal radio-group{
  margin:0px auto;
}
.shenhe-modal label{
  margin:0px 35rpx;
}
.quick-check{
  position: absolute;
  right: 15px;
  top: 35%;
}