<!--pages/consult/consult.wxml-->
<view class="header">
  <view class="header_msg">
    <text>本版块律师皆为一中校友</text>
  </view>
  <view class="btn_answer" wx:if="{{isLawyer}}">
    <navigator url="./consultingMe/consultingMe" hover-class="none">
      <mp-badge extClass="badge" wx:if="{{false}}"></mp-badge>
      <image src="/images/icons/consult.png"></image>
      <view>咨询我的</view>
    </navigator>
  </view>
  <view class="btn_ask">
    <navigator url="./myConsulting/myConsulting" hover-class="none"> 
      <mp-badge extClass="badge" wx:if="{{true}}"></mp-badge>
      <image src="/images/icons/consult.png"></image>
      <view>校友咨询</view>
    </navigator>
  </view>
</view>
<view class="lawyerList">
  <view class="list_item" wx:for="{{lawyerList}}" wx:key="item.id" data-info="{{item}}" bindtap="goToLawyer">
    <view>
      <view class="item_title"><text class="item_name">{{item.name}}</text><text class="item_addr">广东 广州</text><text class="item_firm">广州呵呵事务所</text>
      </view>
      <view class="info_pro">{{info_pro}}</view>
    </view>
  </view>
</view>
