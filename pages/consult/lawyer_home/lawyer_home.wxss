  background-color: #008DF8;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal_msg .modal-dialog {
  width: 560rpx;
  height: 700rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 9999;
  background: #FFFFFF;
  margin: -350rpx -280rpx;
  border-radius: 8rpx;
}
.modal_msg .modal-title {
  padding-top: 41rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  color: #000;
  text-align: center;
}
.modal_msg .modal-content {
  padding: 30rpx;
  height: 450rpx;
  overflow: auto;
}
.modal_msg .modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #666;
}
input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal_msg .modal-footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #dedede;
  font-size: 36rpx;
  line-height: 100rpx;
}
.modal_msg .btn-confirm {
  width: 100%;
  font-size: 32rpx;
  line-height: 100rpx;
  color: #008DF8;
  text-align: center;
  border: none;
  border-radius:0;
  background-color:transparent;
}
.modal_msg .btn-confirm::after {
  border: none;
}
.modal_msg .section-marks{
  line-height: 160rpx;
}
.modal_msg .shenhe-modal .modal-input{
  background:none;
  border:none;
}

