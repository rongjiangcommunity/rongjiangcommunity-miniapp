/* pages/consult/lawyer_home/lawyer_home.wxss */
page{
    background-color: #FFF;
}
/* 律师照片区域 */
.info_img swiper{
  height: 420rpx;
}
.info_img swiper-item{
  position: relative;
}
.info_img image{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  height: 100%;
}
/* 律师信息区域 */
.info{
  padding: 40rpx 30rpx 0;
  color: #333;
}
.info .info_name{
  margin-bottom: 10rpx;
  font-size: 40rpx;
  font-weight: 900;
  line-height: 56rpx;
}
.info_addr,.info_firm{
  font-size: 28rpx;
  line-height: 40rpx;
  margin-right: 20rpx;
}
.info_id{
  margin-top: 48rpx;
}
.info_title{
  display: flex;
  align-items: center;
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 44rpx;
}
.info_title image{
  margin-right: 10rpx;
  width: 12rpx;
  height: 12rpx;
}
.info_content{
  margin-top: 20rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}
.info_id .info_content{
  color: #333;
}
.info_area{
  margin-top: 48rpx;
}
.info_btn{
  display: flex;
  flex-wrap: wrap;
  margin-top: 40rpx;
  padding: 16rpx 0 14rpx;
  border-top: 2rpx solid #ECECEC;
  border-bottom: 2rpx solid #ECECEC;
}
.info_btn button{
  flex: 0 0 33%;
  margin: 0;
  width: 250rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #333;
  background-color: #FFF;
  border: none;

}
.info_btn button[disabled]{
  background-color: #FFF;
  color: #B2B2B2;
}
.info_edu{
  margin-top: 42rpx;
  white-space: pre-wrap;
}
.info_achieve{
  margin-top: 48rpx;
  white-space: pre-wrap;
}
/* 咨询按钮 */
.consult_btn{
  margin-top: 40rpx;
  width: 100%;
  height: 100rpx;
}
.consult_btn button{
  width: 100%;
  height: 100%;
  color: #FFF;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 100rpx;
  background-color: #008DF8;
  border-radius: 0;
}
.modal_content{
  margin: 20rpx 38rpx;
  height: 480rpx;
  overflow: auto;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}