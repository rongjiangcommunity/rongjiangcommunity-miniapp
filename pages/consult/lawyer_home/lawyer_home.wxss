/* pages/consult/lawyer_home/lawyer_home.wxss */
page{
    background-color: #FFF;
}
/* 律师照片区域 */
.info_img swiper{
  height: 420rpx;
}
.info_img swiper-item{
  position: relative;
}
.info_img image{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  height: 100%;
}
/* 律师信息区域 */
.info{
  padding: 40rpx 30rpx 0;
  color: #333;
}
.info .info_name{
  margin-bottom: 10rpx;
  font-size: 40rpx;
  font-weight: 900;
  line-height: 56rpx;
}
.info_addr,.info_firm{
  font-size: 28rpx;
  line-height: 40rpx;
  margin-right: 20rpx;
}
.info_id{
  margin-top: 48rpx;
}
.info_title{
  display: flex;
  align-items: center;
  height: 44rpx;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 44rpx;
}
.info_title image{
  margin-right: 10rpx;
  width: 12rpx;
  height: 12rpx;
}
.info_content{
  margin-top: 20rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}
.info_id .info_content{
  color: #333;
}
.info_area{
  margin-top: 48rpx;
}
.info_btn{
  display: flex;
  flex-wrap: wrap;
  margin-top: 40rpx;
  padding: 16rpx 0 14rpx;
  border-top: 2rpx solid #ECECEC;
  border-bottom: 2rpx solid #ECECEC;
}
.info_btn button{
  flex: 0 0 33%;
  margin: 0;
  width: 250rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #333;
  background-color: #FFF;
  border: none;

}
.info_btn button[disabled]{
  background-color: #FFF;
  color: #B2B2B2;
}
.info_edu{
  margin-top: 42rpx;
  white-space: pre-wrap;
}
.info_achieve{
  margin-top: 48rpx;
  white-space: pre-wrap;
}
/* 咨询按钮 */
.consult_btn{
  margin-top: 40rpx;
  width: 100%;
  height: 100rpx;
}
.consult_btn button{
  width: 100%;
  height: 100%;
  color: #FFF;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 100rpx;
  background-color: #008DF8;
  border-radius: 0;
}
/* button信息弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal_msg .modal-dialog {
  width: 560rpx;
  height: 720rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 9999;
  background: #FFFFFF;
  margin: -350rpx -280rpx;
  border-radius: 8rpx;
}
.modal_msg .modal-title {
  padding-top: 41rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #000;
  text-align: center;
}
.modal_msg .modal-content {
  margin: 20rpx 38rpx;
  height: 480rpx;
  overflow: auto;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #666;
}
.modal_msg .modal-footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #E5E5E5;
}
.modal_msg .btn-confirm {
  width: 100%;
  font-size: 36rpx;
  color: #008DF8;
  line-height: 100rpx;
  text-align: center;
  border: none;
  border-radius:0;
  background-color: #FFF;
}
.modal_msg .btn-confirm::after {
  border: none;
}
/* 认证提示弹窗 */
.modal_approved .modal-dialog {
  width: 560rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #FFFFFF;
  margin: -180rpx 95rpx;
  border-radius: 8rpx;
}
.modal_approved .modal-title {
  padding-top: 41rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  color: #000;
  text-align: center;
}
.modal_approved .modal-content {
  padding: 58rpx 32rpx 35rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  color: #666;
  text-align: center;
}
.modal_approved .modal-footer {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  border-top: 1px solid #dedede;
  font-size: 36rpx;
  line-height: 100rpx;
}

.modal_approved .btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.modal_approved .btn-confirm {
  width: 50%;
  font-size: 36rpx;
  line-height: 100rpx;
  color: #008DF8;
  text-align: center;
  border: none;
  border-radius:0;
  background-color:transparent;
}

.modal_approved .btn-confirm::after {
  border: none;
}
.modal_approved .shenhe-modal .modal-input{
  background:none;
  border:none;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}