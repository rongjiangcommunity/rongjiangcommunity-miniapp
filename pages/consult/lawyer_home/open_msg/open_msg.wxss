/* pages/consult/consult_input/consult_input.wxss */
/* 顶部律师信息 */
.list_item{
  position: relative;
  margin: 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  background-color: #FFF;
  box-shadow: 0 4rpx 24rpx 0 rgba(0,0,0,0.06);
}
.item_name{
  font-size: 32rpx;
  font-weight: 700;
  line-height: 44rpx;
}
.list_info{
  margin-top: 8rpx;
  line-height: 34rpx;
}
.item_addr,.item_firm{
  font-size: 24rpx;
  margin-right: 10rpx;
}
.list_item .info_pro{
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 用户咨询输入框区域 */
.consult_input{
  display: flex;
  position: relative;
  padding: 30rpx;
  width: 100%;
  height: 700rpx;
  background-color: #FFF;
  margin-bottom: 48rpx;
}
.consult_input .consult_title{
  flex-shrink: 0;
  margin-right: 48rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #333
}
.consult_input .consult_content{
  position: relative;
  width: 514rpx;
  height: 100%;
}
.consult_input textarea{
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #333;
}
.consult_input .input_count{
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #B2B2B2;
}
.submit_btn{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
}
.submit_btn button{
  width: 100%;
  height: 100%;
  background-color: #008DF8;
  color: #FFF;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 100rpx;
  border-radius: 0;
}
.submit_btn button[disabled]{
  background-color: #94CDF8;
  color: #FFF;
}
/* 信息弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 560rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #FFFFFF;
  margin: -180rpx 95rpx;
  border-radius: 8rpx;
}
.modal-title {
  padding-top: 41rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  color: #000;
  text-align: center;
}
.modal-content {
  padding: 58rpx 32rpx 35rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  border-top: 1px solid #dedede;
  font-size: 36rpx;
  line-height: 100rpx;
}
.btn-confirm {
  width: 100%;
  font-size: 32rpx;
  line-height: 100rpx;
  color: #008DF8;
  text-align: center;
  border: none;
  border-radius:0;
  background-color:transparent;
}
.btn-confirm::after {
  border: none;
}
.placeholder{
  color: #B2B2B2;
  font-size: 32rpx;
  line-height: 44rpx;
}