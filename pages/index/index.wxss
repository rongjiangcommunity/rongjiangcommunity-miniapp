/**index.wxss**/

.flex-content-center {
  justify-content:center;
}

.bottom-action {
  width:90%;
  text-align:center;
  color: #999;
  margin-top:30rpx;
}
.item-box{
  position: relative;
  height: 150rpx;
  background: #fff;
  box-shadow:1rpx 1rpx 1rpx 1rpx gainsboro;
  border-radius:10rpx;
  margin-bottom: 5rpx;
}
.item-img{
  width: 90rpx;
  height: 90rpx;
  margin: 30rpx;
  float: left;
}
.item-title{
  position: absolute;
  top: 50rpx;
  left: 150rpx;
  font-size: 34rpx;
}
.item-detail{
  position: absolute;
  top: 80rpx;
  left: 150rpx;
  font-size: 28rpx;
}
.item-raw{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.container{
  padding:15rpx 0;
}

.userinfo-nickname{
  font-weight:bold;
  font-size:40rpx;
}

.welcom{
  color : #999
}

