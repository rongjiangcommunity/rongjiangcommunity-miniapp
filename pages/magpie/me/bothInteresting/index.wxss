/* pages/magpie/me/bothInteresting/index.wxss */
page{
  height: 100%;
  background: #f8f8f8;
}
.interestingList{
  overflow: hidden;
  padding-bottom: 30rpx;
}
.item{
  position: relative;
  width: 690rpx;
  height: 296rpx;
  border-radius: 16rpx;
  margin: 20rpx 30rpx 0;
  box-shadow: 0rpx 0 24rpx rgba(0, 0, 0, .06); 
  background: #fff;
}
.imgBox{
  width: 156rpx;
  height: 156rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 30rpx #ff469b15;
}
.leftImg{
  position: absolute;
  top: 40rpx;
  left: 60rpx;
}
.rightImg{
  position: absolute;
  top: 40rpx;
  right: 60rpx;
}
.img{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.leftName{
  position: absolute;
  top: 216rpx;
  left: 96rpx;
  font-size: 28rpx;
  color: #333;
}
.rightName{
  position: absolute;
  top: 216rpx;
  right: 96rpx;
  font-size: 28rpx;
  color: #333;
}
.centerImg{
  position: absolute;
  left: 228rpx;
  top: 80rpx;
  width: 236rpx;
  height: 108rpx;
  animation:mymove 5s infinite;
  -webkit-animation:mymove 1s ease-in-out infinite; /* Safari å’Œ Chrome */
}
@keyframes mymove{
  from {opacity: 1;}
  to {opacity: .8;}
}
@-webkit-keyframes mymove{
  from {opacity: 1;}
  to {opacity: .8;}
}