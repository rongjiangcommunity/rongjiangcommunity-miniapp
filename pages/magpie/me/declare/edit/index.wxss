/* pages/magpie/me/declare/edit/index.wxss */
.edit-box{
  width: 100%;
  height: calc(100vh - 130rpx);
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: 30rpx solid #f8f8f8;
}
.edit-tip{
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}
.edit-area{
  height: calc( 100% - 70rpx);
  margin-top: 10rpx;
}
.btn{
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
}
.btn button{
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  line-height: 100rpx;
  color: #FFFFFF;
  background-color: #008DF8;
  border-radius: 0;
}