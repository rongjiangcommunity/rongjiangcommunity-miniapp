/* pages/magpie/index/index.wxss */
page{
  height: 100%;
  background: #fff;
}
.header{
  padding: 16rpx 60rpx 0;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background: #fff;
  z-index: 1;
}
.header text{
  font-size: 32rpx;
  color: #b2b2b2;
  margin-right: 40rpx;
}
.header text.active{
  font-size: 42rpx;
  color: #333;
  font-weight: bolder;
}
.header .aside{
  float: right;
  width: 42rpx;
  height: 40rpx;
  margin-top: 15rpx;
}
.main{
  margin-top: 100rpx;
  border-bottom: 30rpx solid #f8f8f8;
}
.infoBox{
  position: relative;
  margin: 40rpx 40rpx 40rpx;
  width: 670rpx;
  height: 256rpx;
}
.infoBox .bg{
  width: 100%;
  height: 100%;
}
.infoBox .name{
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  color: #fff;
  font-size: 40rpx;
}
.infoBox .name .sex{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.infoBox .address{
  position: absolute;
  top: 104rpx;
  left: 40rpx;
  color: #fff;
  font-size: 28rpx;
}
.labelBox{
  position: absolute;
  top: 164rpx;
  left: 40rpx;
  display: flex;
  width:600rpx;
  overflow: scroll;
}
.label{
  flex-shrink:0;
  margin: 0 20rpx 20rpx 0;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  letter-spacing: 1px;
  color: #008DF8;
  border-radius: 30rpx;
  background: #F2F8FC;
  padding: 0 30rpx;
}
.arrow{
  position: absolute;
  right: 38rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 32rpx;
}
.lifeInfo{
  margin: 26rpx 40rpx;
}
.lifeInfo .title{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.lifeInfo .tip{
  font-size: 28rpx;
  color: #666;
  margin-left: 16rpx;
}
.addIcon, .photo{
  width: 206rpx;
  height: 206rpx;
  margin: 30rpx 10rpx 0;
}
.imgBox{
  overflow: hidden;
}
.imgBox>view{
  position: relative;
  display: inline-block;
  border-radius: 16rpx;
  overflow: hidden;
  vertical-align: middle;
  float: left;
  border: 1px solid #eee;
}
.imgBox>view:nth-of-type(3n+1){
  margin-left: 0;
}
.imgBox>view:nth-of-type(3n+2){
  /* margin: 30rpx 0; */
}
.imgBox>view:nth-of-type(3n){
  margin-right: 0;
}
.imgBox>view image{
  width: 100%;
  height: 100%;
}
.photo{
  position: relative;
}
.imgBox>view .close{
  position: absolute;
  right: 12rpx;
  top: 12rpx;
  width: 36rpx;
  height: 36rpx;
}

.info_p2{
  margin-top: 30rpx;
  width: 100%;
  background-color: #FFFFFF;
  border-bottom: 30rpx solid #f8f8f8;
}
.info_content{
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 30rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #DDDDDD;
  box-sizing: border-box;
}
.info_content_nb{
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

