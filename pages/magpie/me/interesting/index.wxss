/* pages/magpie/me/interesting/index.wxss */
page{
  height: 100%;
  background: #fff;
}
.item{
  position: relative;
  width: 690rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin: 20rpx 30rpx 0;
  box-shadow: 0rpx 0 24rpx rgba(0, 0, 0, .06); 
}
.item_img{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.item_name{
  position: absolute;
  top: 36rpx;
  left: 190rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.item_address{
  position: absolute;
  top: 82rpx;
  left: 190rpx;
  font-size: 24rpx;
  color: #999;
}
.item_labelBox{
  position: absolute;
  top: 126rpx;
  left: 190rpx;
}
.label{
  display: inline-block;
  margin: 0 20rpx 20rpx 0;
  height: 44rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  font-weight: bold;
  letter-spacing: 1px;
  color: #008DF8;
  border-radius: 22rpx;
  background: #F2F8FC;
  padding: 0 30rpx;
}
.item_Ctrl{
  position: absolute;
  width: 40rpx;
  height: 36rpx;
  top: 20rpx;
  right: 20rpx;
}
.item-raw {
  display: inline-block;
  position: absolute;
  height: 26rpx;
  width: 18rpx;
  right: 27rpx;
  top: 50%;
  transform: translateY(-50%);
}
