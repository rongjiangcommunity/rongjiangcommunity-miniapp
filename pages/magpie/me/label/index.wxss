/* pages/magpie/me/label/index.wxss */
page{
  background: #F8F8F8;
  height: 100%;
  overflow: hidden;
}
.mylabelBox{
  width: 100%;
  height: 400rpx;
  background: #fff;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 30rpx;
}
.title{
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.label{
  display: inline-block;
  margin: 0 20rpx 20rpx 0;
  height: 44rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  font-weight: bold;
  letter-spacing: 1px;
  color: #008DF8;
  border-radius: 22rpx;
  background: #F2F8FC;
  padding: 0 30rpx;
}
.close{
  color: #999;
}
.labelBox{
  margin-bottom:100rpx;
  overflow: scroll;
  height: 100%;
}
.systemLabelBox{
  width: 100%;
  height: calc(100% - 540rpx);
  background: #fff;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 30rpx;
  
}
.systemLabel{
  display: inline-block;
  margin: 0 20rpx 20rpx 0;
  height: 44rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  font-weight: bold;
  letter-spacing: 1px;
  color: #999;
  border-radius: 22rpx;
  background: #F2F8FC;
  padding: 0 30rpx;
}
.btn{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
}
.btn button{
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  line-height: 100rpx;
  color: #FFFFFF;
  background-color: #008DF8;
  border-radius: 0;
}
.inputModal{
  position: absolute;
  left: 50%;
  top: 40%;
  width: 600rpx;
  height: 360rpx;
  border-radius: 16rpx;
  background: #fff;
  transform: translate(-50%, -50%);
  border: 1px solid #ccc;
  overflow: hidden;
}
.modalDialog{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .7);
}
.labelInput{
  background: #fff;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  width: 100%;
  padding: 10rpx;
  margin: 20rpx auto;
  height: 160rpx;
}
.inputModal .title{
  margin: 15rpx 20rpx 0; 
  display: inline-block; 
}
.inputModal button{
  display: block;
  width: 100%;
  height: 86rpx;
  font-size: 32rpx;
  line-height: 84rpx;
  color: #FFFFFF;
  background-color: #008DF8;
  border-radius: 0;
}
.closeModal{
  float: right;
  padding: 15rpx 30rpx;
}