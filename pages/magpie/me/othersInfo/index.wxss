/* pages/magpie/me/OthersInfo/index.wxss */
page{
  background: #fff;
}
.top_part{
  position: relative;
  width: 100%;
  height: 820rpx;
}
.bg_img{
  width: 100%;
  height: 416rpx;
}
.infoBox{
  position: absolute;
  left: 40rpx;
  top: 358rpx;
  width: 670rpx;
  height: 420rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0px 2px 12px rgba(0, 0, 0, .06);
}
.infoBox .name{
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  color: #333;
  font-size: 40rpx;
  font-weight: 900;
}
.infoBox .name .sex{
  width: 32rpx;
  height: 32rpx;
}
.infoBox .address{
  position: absolute;
  top: 104rpx;
  left: 40rpx;
  color: #666;
  font-size: 28rpx;
}
.labelBox{
  position: absolute;
  top: 164rpx;
  left: 40rpx;
  width:600rpx;
}
.label{
  float: left;
  margin: 0 20rpx 20rpx 0;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  letter-spacing: 1px;
  color: #008DF8;
  border-radius: 30rpx;
  background: #F2F8FC;
  padding: 0 30rpx;
}
.labelBox .label:nth-of-type(3n+1){
  clear: both;
}
.arrow{
  position: absolute;
  right: 38rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 32rpx;
}

.item-box{
  text-align: left;
  background: #fff;
  padding: 30rpx 40rpx;
}
.item-title{
  position: relative;
  margin-left: 32rpx;
  display: inline-block;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  color: #333333;
  font-weight: 600;
}
.item-title::before{
  position: absolute;
  left: -24rpx;
  top: 18rpx;
  content: ' ';
  width: 16rpx;
  height: 16rpx;
  background: #008DF8;
}
.item-tip{
  margin-top: 10rpx;
  color: #999;
  font-size: 24rpx;
}
.item-labelBox{
  overflow: hidden;
  margin-top: 20rpx;
}

.btn{
  margin-top: 100rpx;
  width: 100%;
  height: 100rpx;
  /* position: fixed; */
  bottom: 0;
}
.btn button{
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  line-height: 100rpx;
  color: #FFFFFF;
  background-color: #008DF8;
  border-radius: 0;
}